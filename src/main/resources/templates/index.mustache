{{>layout/header}}

<h1>stepbystep</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/todos/save" role="button" class="btn btn-primary">글 등록</a>
            {{#userName}}
                Logged in as: <span id="user">{{userName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            {{/userName}}
            {{^userName}}
                <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
                <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">Naver Login</a>
            {{/userName}}

        </div>
    </div>
    <br>
    <div>timer</div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>카테고리</th>
            <th>내용</th>
            <th>작성자</th>
            <th>상태</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#todos}}
            <tr>
                <td>{{id}}</td>
                <td>{{category}}</td>
                <td><a href="/todos/update/{{id}}">{{content}}</a></td>
                <td>{{author}}</td>
                <td>{{status}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/todos}}
        </tbody>
    </table>
</div>

{{>layout/footer}}